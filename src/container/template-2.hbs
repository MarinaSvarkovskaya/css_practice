<div class="page">
    <div class="page_content">
        <div class="page_block">
            <header class="header">
                <div class="col-3">
                    {{>logo}}
                </div>

                <nav class="header_nav">
                    <div class="header_nav_right">
                        {{>nav list=header}}
                    </div>
                </nav>
            </header>
        </div>

        <div class="page_block">
            <div class="hero">
                {{>hero data=hero}}
                <a class="button" href="{{hero.button.url}}">{{hero.button.text}}</a>
            </div>
        </div>

        <div class="page_block">
            <div class="flex-container">
                {{#each preview}}
                <div class="flex-item">
                    {{>cardPreview info=this}}

                </div>
                {{/each}}
            </div>
        </div>

        <div class="page_block">
            <main class="main">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="list_header">
                            <div>
                                <h2 class="list_title"> List of posts</h2>
                            </div>
                            <div>
                                <div class="category_list">
                                    {{#each categories}}
                                    <button class="category_button">{{text}}</button>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="col-7">
                        <div class="list">
                            {{#each news}}
                            {{>cardPost data=this}}
                            {{/each}}
                        </div>
                    </div>

                    <div class="col-5">
                        <aside class="list_aside">
                            <div class="about">
                                <h4 class="about_title"> About</h4>
                                <p class="about_text"> {{about}}</p>
                            </div>

                            <div>
                                {{>linkList data=archive title='Archive'}}
                                {{>linkList data=social title='Social'}}
                            </div>
                        </aside>
                    </div>
                </div>
            </main>
        </div>

        <div class="page_block">
            <footer class="footer">
                <div>
                    {{>logo}}
                    <span class="footer_copyright"> Copyright 2023-2024</span>
                </div>

                {{#each footer}}
                <div>
                    <span class="footer_title"> {{title}} </span>
                    {{>nav list=links isVertical=true}}

                </div>
                {{/each}}
            </footer>
        </div>
    </div>
</div>