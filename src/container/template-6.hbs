<header class="header">
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">

    <div class="messages">
        <h1 class="messages_title">{{info.title}}</h1>
        <p class="msg_text"> {{info.description}}</p>
    </div>

    {{#with form}}
    <form class="form">
        <h2 class="form_title"> {{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div> </div>
            <label for="{{checkbox.name}}"> {{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button"> {{button}}</button>

        <p class="form_info"> {{info}}</p>

    </form>
    {{/with}}
</main>

<section class="updates_box">
    {{#with updates}}
    <h2 class="updates_title"> {{title}}</h2>

    {{#each list}}
    <div class="updates_list">
        <img src="'https://picsum.photos/32/32'" alt="image" class="update_image">
        <div class="update">
            <h3 class="list_nickname"> @ {{nickname}}</h3>
            <p class="list_description"> {{description}}</p>
        </div>

    </div>
    {{/each}}
    <a href="{{show_all.url}}" class="show_all"> {{show_all.text}}</a>
    {{/with}}
</section>


<sectio class="expirience">
    {{#with expirience }}
    <div class="expirience_badge"> {{badge}}</div>
    <h2 class="expirience_title"> {{title}}</h2>

    <div class="expirience_list">

        {{#each list}}
        <div class="list_card">
            <h3 class="list_name"> {{name}}</h3>
            <p class="list_details"> {{details}}</p>
        </div>
        {{/each}}
    </div>

    {{/with}}
    </section>

    <footer class="footer">
        <div>
            {{>logo}}
            <span class="footer_copyright"> Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div>
            <span class="footer_title"> {{title}} </span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}
    </footer>